<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SearchScreen.SearchFragment">


    <TextView
        android:id="@+id/tvTotalAmtOrder"
        android:text="Find a ride"
        android:textSize="30sp"
        fontPath="Comfortaa-Bold.ttf"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorHeadingColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/md_blue_grey_50"
            android:layout_height="60dp">

            <TextView
                android:layout_width="fill_parent"
                android:hint="Leaving from"
                android:gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:textSize="22dp"
                android:layout_height="match_parent"/>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/md_blue_grey_50"
            android:layout_height="60dp">


            <TextView
                android:layout_width="fill_parent"
                android:hint="Going to"
                android:gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:textSize="22dp"
                android:layout_height="match_parent"/>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
           android:backgroundTint="@color/md_blue_grey_50"
            android:background="@color/md_blue_grey_50"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="1 Passenger"
                android:textSize="22sp"
                fontPath="Comfortaa-Bold.ttf"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textColor="@color/colorHeadingColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

            <TextView
                android:text="Today"
                android:textSize="22sp"
                fontPath="Comfortaa-Bold.ttf"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/colorHeadingColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />


        </RelativeLayout>


        <View
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/md_blue_grey_50"
            android:background="@color/md_blue_grey_50"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>


        <Button
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:text="Search"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:layout_height="50dp"/>


    </LinearLayout>





</LinearLayout>