<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferScreen.Hault">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginBottom="10dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/ivBacH"
            android:layout_width="40dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_baseline_chevron_left_24_white"
            android:tint="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"/>


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Car Model"
        android:textSize="22sp"
        fontPath="Comfortaa-Bold.ttf"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/md_blue_grey_50"
        android:layout_height="55dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_baseline_access_time_24"
                android:layout_width="30dp"
                android:layout_margin="4dp"
                android:layout_centerVertical="true"
                android:tint="@color/textColorHead"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/etCar"
                android:layout_width="fill_parent"
                android:hint="Car Model"
                android:layout_marginStart="50dp"
                android:textColor="@color/md_black_1000"
                android:layout_marginEnd="50dp"
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/ivClearCar"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_width="25dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="match_parent"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Car Color"
        android:textSize="22sp"
        fontPath="Comfortaa-Bold.ttf"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/md_blue_grey_50"
        android:layout_height="55dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_baseline_color_lens_24"
                android:layout_width="30dp"
                android:layout_margin="4dp"
                android:layout_centerVertical="true"
                android:tint="@color/textColorHead"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/etCarColor"
                android:layout_width="fill_parent"
                android:hint="Car Color"
                android:layout_marginStart="50dp"
                android:textColor="@color/md_black_1000"
                android:layout_marginEnd="50dp"
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/ivClearColor"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_width="25dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="match_parent"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="car_second.json"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            app:lottie_loop="true"
            android:layout_height="280dp"/>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabNextH"
        app:borderWidth="0dp"
        android:src="@drawable/ic_baseline_chevron_left_24_white"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:rotation="180"
        android:layout_margin="30dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        />
</RelativeLayout>