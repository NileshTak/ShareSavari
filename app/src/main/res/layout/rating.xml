<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/email"
        app:boxStrokeColor="@color/colorPrimary"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/ivCloseReset"
        app:boxBackgroundColor="@color/md_white_1000"
        android:outlineSpotShadowColor="@color/colorPrimary"
        android:layout_height="80dp">

        <EditText
            android:id="@+id/loginetEmail"
            android:layout_width="match_parent"
            android:hint="Review"
            fontPath="Comfortaa-Bold.ttf"
            android:textSize="20dp"
            android:inputType="textEmailAddress"
            tools:ignore="MissingPrefix"
            android:lines="6"
            android:textColor="@color/md_black_1000"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="80dp"/>

    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/ivCloseReset"
        android:layout_width="30dp"
        android:layout_margin="10dp"
        android:tint="@color/md_red_800"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_alignParentEnd="true"
        android:layout_height="30dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvReset"
        android:layout_below="@+id/email"
        android:layout_width="100dp"
        app:cardCornerRadius="6dp"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        app:cardElevation="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="Submit"
                android:textColor="@color/md_white_1000"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                fontPath="Comfortaa-Bold.ttf"
                android:textSize="20dp"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>