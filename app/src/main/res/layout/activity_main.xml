<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/md_white_1000"
    android:layout_height="match_parent"
    tools:context="com.ddsio.productionapp.sharesavari.MainActivity">

    <LinearLayout
        android:id="@+id/llLogin"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:visibility="gone"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/tvTitleTool"
                android:layout_marginStart="20dp"
                android:text="Login"
                android:textSize="25sp"
                fontPath="Comfortaa-Bold.ttf"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/md_white_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cvLoginFB"
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:visibility="gone"
            app:cardElevation="4dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_margin="10dp"
                    android:tint="@color/md_white_1000"
                    android:src="@drawable/ic_baseline_my_location_24"
                    android:layout_centerInParent="true"
                    android:layout_height="30dp"/>

            </RelativeLayout>

            <View
                android:layout_width="2dp"
                android:background="@color/md_white_1000"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvFromAdd"
                android:layout_width="match_parent"
                android:text="LOG IN WITH FACEBOOK"
                android:textColor="@color/md_white_1000"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                fontPath="Comfortaa-Bold.ttf"
                android:layout_marginStart="25dp"
                android:textSize="14dp"
                android:layout_height="match_parent"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            android:layout_height="60dp">

            <TextView
                android:layout_width="match_parent"
                android:text="OR"
                android:layout_centerInParent="true"
                android:textColor="@color/md_black_1000"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                fontPath="Comfortaa-Bold.ttf"
                android:layout_marginStart="25dp"
                android:textSize="16dp"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="150dp"
                android:layout_centerVertical="true"
                android:background="@color/textColorHead"
                android:layout_height="1dp"/>

            <View
                android:layout_width="150dp"
                android:layout_centerVertical="true"
                android:background="@color/textColorHead"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/colorPrimary"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                app:boxBackgroundColor="@color/md_white_1000"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:layout_height="60dp">

        <EditText
            android:id="@+id/loginetEmail"
            android:layout_width="match_parent"
            android:hint="Mobile Number"
            fontPath="Comfortaa-Bold.ttf"
            android:textSize="20dp"
            android:inputType="number"
            tools:ignore="MissingPrefix"
            android:textColor="@color/md_black_1000"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="60dp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/colorPrimary"
                android:layout_marginBottom="15dp"
                app:boxBackgroundColor="@color/md_white_1000"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:layout_height="60dp">

        <EditText
            android:layout_width="match_parent"
            android:hint="Password"
            android:layout_marginStart="20dp"
            android:id="@+id/loginetPass"
            android:textSize="20dp"
            android:inputType="textPassword"
            tools:ignore="MissingPrefix"
            android:textColor="@color/md_black_1000"
            fontPath="Comfortaa-Bold.ttf"
            android:layout_marginEnd="20dp"
            android:layout_height="60dp"/>

            </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvLogin"
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="4dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_height="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:text="LOG IN "
                    android:textColor="@color/md_white_1000"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    fontPath="Comfortaa-Bold.ttf"
                    android:textSize="14dp"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvForgotPass"
            android:layout_width="match_parent"
            android:text="FORGOT YOUR PASSWORD?"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            tools:ignore="MissingPrefix"
            fontPath="Comfortaa-Bold.ttf"
            android:textSize="12dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="match_parent"
            android:text="NOT A MEMBER YET? JOIN FOR FREE"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:singleLine="true"
            android:textStyle="bold"
            tools:ignore="MissingPrefix"
            fontPath="Comfortaa-Bold.ttf"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:elevation="2dp"
        android:visibility="gone"
        android:id="@+id/nsvSignUp"
        android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/llSignUp"
        android:orientation="vertical"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="60dp">

            <TextView
                android:layout_marginStart="20dp"
                android:text="Sign Up"
                android:textSize="25sp"
                fontPath="Comfortaa-Bold.ttf"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/md_white_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginStart="20dp"
                android:text="Notes : "
                android:textSize="18sp"
                fontPath="Comfortaa-Bold.ttf"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/md_red_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />
            <TextView
                android:layout_marginStart="20dp"
                android:text="* Resolution of the Images should be at highest value. "
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:textColor="@color/md_red_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

            <TextView
                android:layout_marginStart="20dp"
                android:text="* Uploading Photograph must be in appropriate light conditions so that face should be clearly
visible against white background. "
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:textColor="@color/md_red_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

            <TextView
                android:layout_marginStart="20dp"
                android:text="* Photograph must be a recently clicked or should not be more than 6 months old. "
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:textColor="@color/md_red_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <androidx.cardview.widget.CardView
                android:id="@+id/cvSignUpFB"
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginTop="25dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_margin="10dp"
                            android:tint="@color/md_white_1000"
                            android:src="@drawable/ic_baseline_my_location_24"
                            android:layout_centerInParent="true"
                            android:layout_height="30dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="2dp"
                        android:background="@color/md_white_1000"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/tvSignUPFB"
                        android:layout_width="match_parent"
                        android:text="CONNECT WITH FACEBOOK"
                        android:textColor="@color/md_white_1000"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textStyle="bold"
                        tools:ignore="MissingPrefix"
                        fontPath="Comfortaa-Bold.ttf"
                        android:layout_marginStart="25dp"
                        android:textSize="14dp"
                        android:layout_height="match_parent"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:visibility="gone"
                android:layout_marginEnd="15dp"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="match_parent"
                    android:text="OR"
                    android:layout_centerInParent="true"
                    android:textColor="@color/md_black_1000"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    fontPath="Comfortaa-Bold.ttf"
                    android:layout_marginStart="25dp"
                    android:textSize="16dp"
                    android:layout_height="match_parent"/>

                <View
                    android:layout_width="150dp"
                    android:layout_centerVertical="true"
                    android:background="@color/textColorHead"
                    android:layout_height="1dp"/>

                <View
                    android:layout_width="150dp"
                    android:layout_centerVertical="true"
                    android:background="@color/textColorHead"
                    android:layout_height="1dp"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>














            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="6dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile No :"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="8dp"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />


                        <ImageView
                            android:id="@+id/tvAlertImg"
                            android:layout_width="30dp"
                            android:visibility="visible"
                            android:src="@drawable/alert"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_height="30dp"/>
                        <ImageView
                            android:id="@+id/tvTickImg"
                            android:layout_width="30dp"
                            android:visibility="gone"
                            android:src="@drawable/tick"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_height="30dp"/>


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvMobP"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        app:fontPath = "Comfortaa-Bold.ttf"
                        android:textAlignment="center"
                        tools:ignore="MissingPrefix"  />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etMobileP"
                        android:layout_width="match_parent"
                        app:boxStrokeColor="@color/colorPrimary"
                        android:layout_marginBottom="15dp"
                        app:boxBackgroundColor="@color/md_white_1000"
                        android:outlineSpotShadowColor="@color/colorPrimary"
                        android:layout_height="60dp">

                        <EditText
                            android:id="@+id/etMobile"
                            android:layout_width="match_parent"
                            android:hint="Mobile Number"
                            android:layout_marginStart="20dp"
                            android:textSize="18dp"
                            android:inputType="number"
                            tools:ignore="MissingPrefix"
                            android:textColor="@color/md_black_1000"
                            fontPath="Comfortaa-Bold.ttf"
                            android:layout_marginEnd="20dp"
                            android:layout_height="60dp"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:id="@+id/btnVerifyMob"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_marginEnd="20dp"
                        android:tint="@color/textColorHead"
                        android:text="Verify"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="end"
                        android:layout_height="match_parent"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:id="@+id/form"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="wrap_content" >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_height="150dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civProfImg"
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:visibility="visible"
                    android:layout_gravity="center_horizontal"
                    app:civ_border_color="@color/md_black_1000"
                    app:civ_border_width="0.5dp"/>

                <TextView
                    android:text="Profile Pic"
                    android:textSize="18sp"
                    fontPath="Comfortaa-Bold.ttf"
                    android:layout_gravity="bottom"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingPrefix" />


            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="150dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civAdharImg"
                        android:src="@mipmap/ic_launcher_round"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal"
                        app:civ_border_color="@color/md_black_1000"
                        app:civ_border_width="0.5dp"/>

                    <TextView
                        android:text="Adhar Front"
                        android:textSize="18sp"
                        fontPath="Comfortaa-Bold.ttf"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="MissingPrefix" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="150dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civAdharImgB"
                        android:src="@mipmap/ic_launcher_round"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal"
                        app:civ_border_color="@color/md_black_1000"
                        app:civ_border_width="0.5dp"/>

                    <TextView
                        android:text="Adhar Back"
                        android:textSize="18sp"
                        fontPath="Comfortaa-Bold.ttf"
                        android:layout_gravity="bottom"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="MissingPrefix" />


                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/colorPrimary"
                android:layout_marginBottom="15dp"
                app:boxBackgroundColor="@color/md_white_1000"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:layout_height="60dp">

            <EditText
                android:id="@+id/etGender"
                android:layout_width="match_parent"
                android:hint="Gender"
                fontPath="Comfortaa-Bold.ttf"
                android:textSize="18dp"
                tools:ignore="MissingPrefix"
                android:textColor="@color/md_black_1000"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="60dp"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/colorPrimary"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                app:boxBackgroundColor="@color/md_white_1000"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:layout_height="60dp">

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:hint="Username"
                    fontPath="Comfortaa-Bold.ttf"
                    android:textSize="18dp"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/md_black_1000"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="60dp"/>

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/colorPrimary"
                 android:layout_marginBottom="15dp"
                app:boxBackgroundColor="@color/md_white_1000"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:layout_height="60dp">

            <EditText
                android:id="@+id/etFN"
                android:layout_width="match_parent"
                android:hint="First Name"
                android:layout_marginStart="20dp"
                android:textSize="18dp"
                android:layout_marginEnd="20dp"
                tools:ignore="MissingPrefix"
                android:textColor="@color/md_black_1000"
                fontPath="Comfortaa-Bold.ttf"
                android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/colorPrimary"
                android:layout_marginBottom="15dp"
                app:boxBackgroundColor="@color/md_white_1000"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:layout_height="60dp">

            <EditText
                android:id="@+id/etLN"
                android:layout_width="match_parent"
                android:hint="Last Name"
                android:layout_marginStart="20dp"
                android:textSize="20dp"
                tools:ignore="MissingPrefix"
                android:textColor="@color/md_black_1000"
                fontPath="Comfortaa-Bold.ttf"
                android:layout_marginEnd="20dp"
                android:layout_height="60dp"/>

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/colorPrimary"
                android:layout_marginBottom="15dp"
                app:boxBackgroundColor="@color/md_white_1000"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:layout_height="60dp">

            <EditText
                android:id="@+id/etBirthDate"
                android:layout_width="match_parent"
                android:hint="Year Of Birth"
                android:layout_marginStart="20dp"
                android:textSize="18dp"
                tools:ignore="MissingPrefix"
                android:textColor="@color/md_black_1000"
                fontPath="Comfortaa-Bold.ttf"
                android:layout_marginEnd="20dp"
                android:layout_height="60dp"/>

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/colorPrimary"
                android:layout_marginBottom="15dp"
                app:boxBackgroundColor="@color/md_white_1000"
                android:outlineSpotShadowColor="@color/colorPrimary"
                android:layout_height="60dp">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:hint="E-mail"
                android:layout_marginStart="20dp"
                android:textSize="18dp"
                android:inputType="textEmailAddress"
                tools:ignore="MissingPrefix"
                android:textColor="@color/md_black_1000"
