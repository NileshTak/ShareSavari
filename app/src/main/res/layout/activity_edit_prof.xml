<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ProfileScreen.EditProf">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBa"
            android:layout_width="40dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_baseline_chevron_left_24_white"
            android:tint="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Mail"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"

                android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp"
                app:fontPath = "Comfortaa-Bold.ttf"
                android:textSize="20sp"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"  />



            <EditText
                android:id="@+id/tvEMail"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:visibility="visible"
                android:hint="Enter Bio"
                android:layout_gravity="center_horizontal"
                app:fontPath = "Comfortaa-Bold.ttf"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"  />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvBio"
        android:layout_margin="10dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="8dp"
                    app:fontPath = "Comfortaa-Bold.ttf"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    tools:ignore="MissingPrefix"  />

                <ImageView
                    android:id="@+id/ivEditB"
                    android:layout_alignParentEnd="true"
                    android:layout_width="30dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:layout_marginTop="30dp"
                    android:layout_height="30dp"/>

            </RelativeLayout>


            <EditText
                android:id="@+id/etBioE"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:visibility="visible"
                android:hint="Enter Bio"
                android:layout_gravity="center_horizontal"
                app:fontPath = "Comfortaa-Bold.ttf"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"  />

            <TextView
                android:id="@+id/tvBioE"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"  />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSaveE"
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:visibility="visible"
        app:cardElevation="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="SAVE"
                android:textColor="@color/md_white_1000"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                fontPath="Comfortaa-Bold.ttf"
                android:textSize="16dp"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>