<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SearchScreen.child.DriverProfile">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginBottom="10dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/ivCloseScreen"
            android:layout_width="40dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_baseline_chevron_left_24_white"
            android:tint="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"/>


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

             <de.hdodenhof.circleimageview.CircleImageView
                 android:id="@+id/cvProf"
                 android:layout_width="120dp"
                 android:elevation="1dp"
                 android:layout_margin="2dp"
                 android:src="@drawable/account"
                 app:civ_border_width="1dp"
                 app:civ_border_color="@color/md_blue_grey_50"
                 android:layout_gravity="center_horizontal"
                 android:layout_height="120dp"/>


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Name"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                fontPath="Comfortaa-Bold.ttf"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"  />


            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39 y/o"
                android:visibility="gone"
                android:focusable="true"
                android:layout_marginBottom="10dp"
                android:focusableInTouchMode="true"
                android:textColor="@color/textColorHead"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                fontPath="Comfortaa-Regular.ttf"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"  />




            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="60dp">

                <ImageView
                    android:src="@drawable/ic_baseline_calendar_today_24"
                    android:layout_width="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"/>


                <TextView
                    android:id="@+id/tvDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I talk depending on my mood"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/textColorHead"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    fontPath="Comfortaa-Regular.ttf"
                    tools:ignore="MissingPrefix"  />



            </LinearLayout>

            <View
                android:background="@color/md_blue_grey_100"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="60dp">



                <ImageView
                    android:id="@+id/iv"
                    android:src="@drawable/ic_baseline_mobile_friendly_24"
                    android:layout_width="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"/>


                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Verified"
                    android:layout_toRightOf="@+id/iv"
                    android:focusable="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textColorHead"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    fontPath="Comfortaa-Regular.ttf"
                    android:textAlignment="center"
                    tools:ignore="MissingPrefix"  />

                <ImageView
                    android:id="@+id/ivAlert"
                    android:layout_width="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/tick"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="end"
                    android:layout_height="30dp"/>


            </RelativeLayout>


            <View
                android:background="@color/md_blue_grey_100"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="60dp">



                <ImageView
                    android:id="@+id/ivP"
                    android:src="@drawable/ic_baseline_person_outline_24"
                    android:layout_width="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"/>


                <TextView
                    android:id="@+id/tvProf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Verified"
                    android:layout_toRightOf="@+id/ivP"
                    android:focusable="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textColorHead"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    fontPath="Comfortaa-Regular.ttf"
                    android:textAlignment="center"
                    tools:ignore="MissingPrefix"  />

                <ImageView
                    android:id="@+id/ivAlertProf"
                    android:layout_width="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/alert"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="end"
                    android:layout_height="30dp"/>


            </RelativeLayout>


            <View
                android:background="@color/md_blue_grey_100"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/ivAge"
                    android:src="@drawable/ic_baseline_account_circle_24"
                    android:layout_width="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"/>


                <TextView
                    android:id="@+id/tvAgeYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Years Old"
                    android:layout_toRightOf="@+id/ivAge"
                    android:focusable="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textColorHead"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    fontPath="Comfortaa-Regular.ttf"
                    android:textAlignment="center"
                    tools:ignore="MissingPrefix"  />


            </RelativeLayout>

            <View
                android:background="@color/md_blue_grey_100"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"/>

            <TextView
                android:id="@+id/tvRidesC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="15dp"
                android:focusableInTouchMode="true"
                android:textColor="@color/textColorHead"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                fontPath="Comfortaa-Regular.ttf"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"  />
            <View
                android:background="@color/md_blue_grey_100"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"/>
            <TextView
                android:id="@+id/tvMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member since Aug 2020"
                android:focusable="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="15dp"
                android:focusableInTouchMode="true"
                android:textColor="@color/textColorHead"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                fontPath="Comfortaa-Regular.ttf"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"  />
            <View
                android:background="@color/md_blue_grey_100"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"/>

            <RelativeLayout
                android:id="@+id/rvRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RatingBar
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_height="wrap_content"
                    android:saveEnabled="true"
                    android:numStars="5"/>

                <Button
                    android:id="@+id/btnSubmit"
                    android:visibility="gone"
                    android:layout_width="90dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:tint="@color/textColorHead"
                    android:text="Rate"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="end"
                    android:layout_height="match_parent"/>



            </RelativeLayout>

            <TextView
                android:id="@+id/tvRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0 Ratings"
                android:focusable="true"
                android:layout_marginTop="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="2dp"
                android:focusableInTouchMode="true"
                android:textColor="@color/textColorHead"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                fontPath="Comfortaa-Regular.ttf"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"  />

            <View
                android:background="@color/md_blue_grey_100"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"/>


            <LinearLayout
                android:id="@+id/llContact"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvCall"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center_horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_margin="10dp"
                    app:cardElevation="4dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:cardBackgroundColor="@color/md_green_800"
                    android:layout_height="40dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Call"
                            android:textColor="@color/md_white_1000"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix"
                            fontPath="Comfortaa-Bold.ttf"
                            android:textSize="14dp"
                            android:layout_height="match_parent"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvChat"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center_horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_height="40dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Chat"
                            android:textColor="@color/md_white_1000"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix"
                            fontPath="Comfortaa-Bold.ttf"
                            android:textSize="14dp"
                            android:layout_height="match_parent"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>




            <View
                android:background="@color/md_blue_grey_100"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"/>



            <RelativeLayout
                android:id="@+id/rvReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    fontPath="Comfortaa-Bold.ttf"
                    android:textAlignment="center"
                    tools:ignore="MissingPrefix"  />

                <ImageView
                    android:id="@+id/ivR"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_width="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"/>

            </RelativeLayout>



            <View
                android:background="@color/md_blue_grey_100"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="2dp"/>

            <TextView
                android:id="@+id/tvReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report this member"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="15dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                fontPath="Comfortaa-Bold.ttf"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"  />


        </LinearLayout>





    </androidx.core.widget.NestedScrollView>

</LinearLayout>