<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferScreen.GoingDateAndTime">



        <ImageView
            android:id="@+id/ivBackGoing"
            android:layout_width="40dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_baseline_chevron_left_24_white"
            android:tint="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/ivBackGoing"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvTitleTool"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="When are you going?"
            android:textSize="25sp"
            fontPath="Comfortaa-Bold.ttf"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cvFromLocation"
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/md_blue_grey_50"
        android:layout_height="55dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_baseline_calendar_today_24"
                android:layout_width="30dp"
                android:layout_margin="4dp"
                android:layout_centerVertical="true"
                android:tint="@color/textColorHead"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/etSelectDate"
                android:layout_width="fill_parent"
                android:hint="Date"
                android:layout_marginStart="50dp"
                android:textColor="@color/md_black_1000"
                android:layout_marginEnd="50dp"
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/ivClear"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_width="25dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="match_parent"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="What time will you pick passengers up?"
        android:textSize="25sp"
        fontPath="Comfortaa-Bold.ttf"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/md_blue_grey_50"
        android:layout_height="55dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_baseline_access_time_24"
                android:layout_width="30dp"
                android:layout_margin="4dp"
                android:layout_centerVertical="true"
                android:tint="@color/textColorHead"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/etSelectTime"
                android:layout_width="fill_parent"
                android:hint="Time"
                android:timePickerMode="spinner"
                android:layout_marginStart="50dp"
                android:textColor="@color/md_black_1000"
                android:layout_marginEnd="50dp"
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:layout_gravity="center_vertical"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/ivClearTime"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_width="25dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="match_parent"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>



        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="When are you going to reach?"
            android:textSize="25sp"
            fontPath="Comfortaa-Bold.ttf"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/md_blue_grey_50"
            android:layout_height="55dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_baseline_calendar_today_24"
                    android:layout_width="30dp"
                    android:layout_margin="4dp"
                    android:layout_centerVertical="true"
                    android:tint="@color/textColorHead"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/etReachDate"
                    android:layout_width="fill_parent"
                    android:hint="Date"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/md_black_1000"
                    android:layout_marginEnd="50dp"
                    android:singleLine="true"
                    android:layout_centerInParent="true"
                    android:background="#00000000"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:id="@+id/ivClearR"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_close_24"
                    android:layout_width="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="match_parent"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="What time will you reach?"
            android:textSize="25sp"
            fontPath="Comfortaa-Bold.ttf"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/md_blue_grey_50"
            android:layout_height="55dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_baseline_access_time_24"
                    android:layout_width="30dp"
                    android:layout_margin="4dp"
                    android:layout_centerVertical="true"
                    android:tint="@color/textColorHead"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/etReachTime"
                    android:layout_width="fill_parent"
                    android:hint="Time"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/md_black_1000"
                    android:layout_marginEnd="50dp"
                    android:singleLine="true"
                    android:layout_centerInParent="true"
                    android:background="#00000000"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:id="@+id/ivClearTimeR"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_close_24"
                    android:layout_width="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="match_parent"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>




        <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_margin="20dp"
             android:layout_height="wrap_content">

             <CheckBox
                 android:id="@+id/cvReturnRide"
                 android:layout_width="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_height="wrap_content"/>

             <TextView
                 android:layout_marginTop="10dp"
                 android:text="Return Ride"
                 android:textSize="25sp"
                 fontPath="Comfortaa-Bold.ttf"
                 android:layout_centerVertical="true"
                 android:layout_marginBottom="10dp"
                 android:textStyle="bold"
                 android:textColor="@color/textColor"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 tools:ignore="MissingPrefix" />

         </LinearLayout>


    </LinearLayout>




    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabNext"
        app:borderWidth="0dp"
        android:src="@drawable/ic_baseline_chevron_left_24_white"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:rotation="180"
        android:layout_margin="30dp"
        android:adjustViewBounds="true"
        />

</RelativeLayout>