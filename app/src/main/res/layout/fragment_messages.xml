<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context="com.ddsio.productionapp.sharesavari.InboxScreen.Fragments.MessagesFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_baseline_message_24"
            android:tint="@color/colorPrimary"
            android:layout_height="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitleTool"
                android:layout_marginStart="20dp"
                android:text="ShareSavari"
                android:textSize="18sp"
                fontPath="Comfortaa-Bold.ttf"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />


            <TextView
                android:layout_marginStart="20dp"
                android:text="Important development - a message from ShareSavari
co-Founder."
                android:textSize="14sp"
                fontPath="Comfortaa-Bold.ttf"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/textColorHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>