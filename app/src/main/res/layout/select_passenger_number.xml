<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <ImageView
        android:id="@+id/ivCloseP"
        android:layout_width="30dp"
        android:layout_margin="10dp"
        android:tint="@color/md_red_800"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_alignParentEnd="true"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/tvTitleTool"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Passengers Count :"
        android:textSize="20sp"
        fontPath="Comfortaa-Bold.ttf"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        tools:ignore="MissingPrefix"
        android:layout_height="wrap_content"/>




    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_below="@+id/tvTitleTool"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cvMinus"
            android:layout_width="45dp"
            app:cardCornerRadius="20dp"
            android:layout_centerVertical="true"
            app:cardElevation="4dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/md_blue_grey_50"
            android:layout_height="45dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_baseline_indeterminate_check_box_24"
                    android:layout_width="30dp"
                    android:layout_margin="4dp"
                    android:layout_centerVertical="true"
                    android:tint="@color/textColorHead"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvCount"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="1"
            android:textSize="55sp"
            fontPath="Comfortaa-Bold.ttf"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            tools:ignore="MissingPrefix"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAdd"
            android:layout_width="45dp"
            app:cardCornerRadius="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:cardElevation="4dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/md_blue_grey_50"
            android:layout_height="45dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_width="30dp"
                    android:layout_margin="4dp"
                    android:layout_centerVertical="true"
                    android:tint="@color/textColorHead"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvDone"
        android:layout_below="@+id/rl1"
        android:layout_width="100dp"
        app:cardCornerRadius="6dp"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginBottom="20dp"
        app:cardElevation="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="Done"
                android:textColor="@color/md_white_1000"
                android:gravity="center"
                android:singleLine="true"
                android:textStyle="bold"
                tools:ignore="MissingPrefix"
                fontPath="Comfortaa-Bold.ttf"
                android:textSize="20dp"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>