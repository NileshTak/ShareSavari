<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.ddsio.productionapp.sharesawaari.ProfileScreen.ProfileScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:elevation="7dp"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tvTitleTool"
            android:layout_marginStart="20dp"
            android:text="Profile"
            android:textSize="25sp"
            fontPath="Comfortaa-Bold.ttf"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/md_white_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />


        <ImageView
            android:id="@+id/ivLogout"
            android:layout_width="35dp"
            android:src="@drawable/logout"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_height="35dp"/>


        <ImageView
            android:id="@+id/ivEdi"
            android:layout_width="35dp"
            android:tint="@color/md_white_1000"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_height="35dp"/>


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_marginTop="-12dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/md_white_1000"
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_alignParentEnd="true"
                android:layout_width="30dp"
                android:visibility="gone"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginTop="30dp"
                android:layout_height="30dp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieSelectImage"
                android:layout_width="180dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="camera.json"
                android:layout_centerInParent="true"
                app:lottie_loop="true"
                android:layout_height="180dp"/>

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rlParent"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProf"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:civ_border_color="#ffffff"
                android:visibility="visible"
                android:src="@drawable/account"
                android:layout_centerHorizontal="true"  />


            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Name"
                android:layout_centerHorizontal="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_below="@id/ivProf"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" 
                fontPath="Comfortaa-Bold.ttf"
                android:textAlignment="center"
                tools:ignore="MissingPrefix"  />


        </RelativeLayout>



    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/tvP"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FirstName"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"

                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="8dp"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />


                        <TextView
                            android:id="@+id/tvFN"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            app:fontPath = "Comfortaa-Bold.ttf"

                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LastName"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"

                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="8dp"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />


                        <TextView
                            android:id="@+id/tvLN"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E-Mail"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"

                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="8dp"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />


                        <TextView
                            android:id="@+id/tvEMail"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile No :"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_marginStart="20dp"
                                android:layout_marginBottom="8dp"
                                app:fontPath = "Comfortaa-Bold.ttf"
                                android:textSize="20sp"
                                android:textAlignment="center"
                                tools:ignore="MissingPrefix"  />


                            <ImageView
                                android:id="@+id/tvAlert"
                                android:layout_width="30dp"
                                android:src="@drawable/alert"
                                android:layout_marginEnd="20dp"
                                android:layout_marginBottom="8dp"
                                android:layout_alignParentEnd="true"
                                android:layout_height="30dp"/>


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvMN"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />

                        <Button
                            android:id="@+id/btnVerify"
                            android:layout_width="100dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:layout_marginEnd="20dp"
                            android:tint="@color/textColorHead"
                            android:text="Verify"
                            android:layout_marginBottom="8dp"
                            android:layout_gravity="end"
                            android:layout_height="match_parent"/>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verified"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"

                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="8dp"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />


                        <ImageView
                            android:id="@+id/ivVerified"
                            android:layout_width="30dp"
                            android:src="@drawable/alert"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_height="30dp"/>


</RelativeLayout>

                        <TextView
                            android:id="@+id/tvVerified"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/cbPetsP"
                        android:layout_width="wrap_content"
                        android:visibility="visible"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="No Pets"
                        android:textSize="16sp"
                        fontPath="Comfortaa-Bold.ttf"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingPrefix" />

                </LinearLayout>



                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/cbSmokingP"
                        android:layout_width="wrap_content"
                        android:visibility="visible"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Smoking is OK"
                        android:textSize="16sp"
                        fontPath="Comfortaa-Bold.ttf"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingPrefix" />

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBio"
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bio"
                                android:layout_centerVertical="true"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_marginStart="20dp"
                                android:layout_marginBottom="8dp"
                                app:fontPath = "Comfortaa-Bold.ttf"
                                android:textSize="20sp"
                                android:textAlignment="center"
                                tools:ignore="MissingPrefix"  />

                            <ImageView
                                android:id="@+id/ivEditB"
                                android:layout_alignParentEnd="true"
                                android:layout_width="30dp"
                                android:layout_centerVertical="true"
                                android:visibility="gone"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_baseline_edit_24"
                                android:layout_marginTop="30dp"
                                android:layout_height="30dp"/>

                        </RelativeLayout>


                        <EditText
                            android:id="@+id/etBio"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:visibility="gone"
                            android:hint="Enter Bio"
                            android:layout_gravity="center_horizontal"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />

                        <TextView
                            android:id="@+id/tvBio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bio"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="8dp"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Birth Date"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"

                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="8dp"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />


                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"

                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="8dp"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />


                        <TextView
                            android:id="@+id/tvGender"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            app:fontPath = "Comfortaa-Bold.ttf"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPublic"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="20dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:visibility="visible"
                    app:cardElevation="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_height="50dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:text="View Public Profile"
                            android:textColor="@color/md_white_1000"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textStyle="bold"
                            tools:ignore="MissingPrefix"
                            fontPath="Comfortaa-Bold.ttf"
                            android:textSize="16dp"
                            android:layout_height="match_parent"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>



        <androidx.cardview.widget.CardView
            android:id="@+id/cvSave"
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:visibility="gone"
            app:cardElevation="4dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_height="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:text="SAVE"
                    android:textColor="@color/md_white_1000"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    fontPath="Comfortaa-Bold.ttf"
                    android:textSize="16dp"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>



</LinearLayout>