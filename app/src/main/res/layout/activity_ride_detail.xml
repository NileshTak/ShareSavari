<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginBottom="10dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/ivCloseScreen"
            android:layout_width="40dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_baseline_chevron_left_24_white"
            android:tint="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"/>


    </LinearLayout>

    <com.google.android.gms.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapRide"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDay"
                    android:textSize="20sp"
                    android:visibility="gone"
                    fontPath="Comfortaa-Bold.ttf"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/colorHeadingColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix" />


                <TextView
                    android:id="@+id/tvDate"
                    android:text="Date..."
                    android:textSize="30sp"
                    android:visibility="gone"
                    fontPath="Comfortaa-Bold.ttf"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorHeadingColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingPrefix" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llLeaving"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLTime"
                            android:text="11:00:00"
                            android:width="100dp"
                            android:textSize="20sp"
                            fontPath="Comfortaa-Bold.ttf"
                            android:layout_marginTop="20dp"
                            android:textAlignment="center"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/colorHeadingColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingPrefix" />


                        <View
                            android:layout_width="2dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorPrimary"
                            android:backgroundTint="@color/colorPrimary"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvFromAdd"
                                android:text="Date..."
                                android:textSize="20sp"
                                fontPath="Comfortaa-Bold.ttf"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="20dp"
                                android:gravity="center_vertical"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/colorHeadingColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="MissingPrefix" />

                            <TextView
                                android:id="@+id/tvFromFullAdd"
                                android:text="Date..."
                                android:textSize="12sp"
                                fontPath="Comfortaa-Bold.ttf"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="20dp"
                                android:gravity="center_vertical"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/colorHeadingColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSP"
                        android:layout_below="@+id/llLeaving"
                        android:textSize="25sp"
                        fontPath="Comfortaa-Bold.ttf"
                        android:textAlignment="center"
                        android:text="StopPoing"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="140dp"
                        android:textColor="@color/textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingPrefix" />

                    <LinearLayout
                        android:id="@+id/llGoing"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/tvSP"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvRTime"
                            android:text="11:00:00"
                            android:width="100dp"
                            android:textSize="20sp"
                            fontPath="Comfortaa-Bold.ttf"
                            android:layout_marginTop="20dp"
                            android:textAlignment="center"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="@color/colorHeadingColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingPrefix" />


                        <View
                            android:layout_width="2dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorPrimary"
                            android:backgroundTint="@color/colorPrimary"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvToAdd"
                                android:text="Date..."
                                android:textSize="20sp"
                                fontPath="Comfortaa-Bold.ttf"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="20dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorHeadingColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="MissingPrefix" />


                            <TextView
                                android:id="@+id/tvToFullAdd"
                                android:text="Date..."
                                android:textSize="12sp"
                                fontPath="Comfortaa-Bold.ttf"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="20dp"
                                android:gravity="center_vertical"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="@color/colorHeadingColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>



                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/llStopPoint"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_below="@id/llGoing"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="StopPoint in Between"
                            android:textSize="18sp"
                            fontPath="Comfortaa-Bold.ttf"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="150dp"
                            android:layout_marginBottom="20dp"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textColor="@color/textColorHead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingPrefix" />


                        <TextView
                            android:id="@+id/tvStopPoint"
                            android:text="Date..."
                            android:textSize="25sp"
                            fontPath="Comfortaa-Bold.ttf"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentEnd="true"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:textColor="@color/textColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingPrefix" />



                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_below="@id/llStopPoint"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Total Price for 1 passenger"
                            android:textSize="18sp"
                            fontPath="Comfortaa-Bold.ttf"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="150dp"
                            android:layout_marginBottom="20dp"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textColor="@color/textColorHead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingPrefix" />


                        <TextView
                            android:id="@+id/tvPrice"
                            android:text="Date..."
                            android:textSize="25sp"
                            fontPath="Comfortaa-Bold.ttf"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_alignParentEnd="true"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:textColor="@color/textColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingPrefix" />



                    </RelativeLayout>



                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/textColorHead"
                    android:layout_height="2dp"/>


                <RelativeLayout
                    android:id="@+id/rlProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginEnd="130dp"

                        android:layout_marginStart="20dp"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/tvOfferedby"
                        android:textSize="25sp"
                        fontPath="Comfortaa-Bold.ttf"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/colorHeadingColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingPrefix" />


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_marginEnd="2dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_baseline_star_24"
                                android:layout_height="22dp"/>


                            <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/5 ratings"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:textColor="@color/textColorHead"
                            android:textSize="16sp"
                            fontPath="Comfortaa-Regular.ttf"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />


                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivprof"
                            android:layout_width="60dp"
                            android:src="@drawable/account"
                            android:layout_marginEnd="15dp"
                            android:layout_height="60dp"/>


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:layout_height="40dp"/>

                    </RelativeLayout>




                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/textColorHead"
                    android:layout_height="2dp"/>

                <LinearLayout
                    android:id="@+id/llAutoApp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_flash_on_24"
                        android:layout_height="25dp"/>





                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automatic Approval"
                        android:layout_gravity="center_vertical"
                        android:focusable="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="15dp"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/textColorHead"
                        android:textSize="18sp"
                        fontPath="Comfortaa-Regular.ttf"
                        android:textAlignment="center"
                        tools:ignore="MissingPrefix"  />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_group_24"
                        android:layout_height="25dp"/>


                    <TextView
                        android:id="@+id/tvBackSeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max. 2 in the back seats"
                        android:layout_gravity="center_vertical"
                        android:focusable="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="15dp"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/textColorHead"
                        android:textSize="18sp"
                        fontPath="Comfortaa-Regular.ttf"
                        tools:ignore="MissingPrefix"  />


                </LinearLayout>


            <LinearLayout
                android:id="@+id/llSmoking"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_smoking_rooms_24"
                    android:layout_height="30dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smoking is OK"
                    android:focusable="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="15dp"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/textColorHead"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    fontPath="Comfortaa-Regular.ttf"
                    android:textAlignment="center"
                    tools:ignore="MissingPrefix"  />

            </LinearLayout>



                <LinearLayout
                    android:id="@+id/llPets"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_pets_24"
                        android:layout_height="30dp"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Pets"
                        android:focusable="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="15dp"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/textColorHead"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        fontPath="Comfortaa-Regular.ttf"
                        android:textAlignment="center"
                        tools:ignore="MissingPrefix"  />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/textColorHead"
                    android:layout_height="2dp"/>



                <LinearLayout
                    android:id="@+id/llCar"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="30dp"
                        android:tint="@color/colorPrimaryDark"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_directions_car_24"
                        android:layout_height="30dp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tvCar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nano"
                            android:focusable="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="20dp"
                            android:textAllCaps="true"
                            android:focusableInTouchMode="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="22sp"
                            android:layout_gravity="center_vertical"
                            fontPath="Comfortaa-Regular.ttf"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />



                        <TextView
                            android:id="@+id/tvCarColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="White"
                            android:focusable="true"
                            android:layout_marginStart="20dp"
                            android:textAllCaps="true"
                            android:layout_marginBottom="15dp"
                            android:focusableInTouchMode="true"
                            android:textColor="@color/textColorHead"
                            android:textSize="16sp"
                            android:layout_gravity="center_vertical"
                            fontPath="Comfortaa-Regular.ttf"
                            android:textAlignment="center"
                            tools:ignore="MissingPrefix"  />

                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/textColorHead"
                    android:layout_height="2dp"/>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Extra Details"
                        android:focusable="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:textAllCaps="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:layout_gravity="center_vertical"
                        fontPath="Comfortaa-Regular.ttf"
                        android:textAlignment="center"
                        tools:ignore="MissingPrefix"  />



                    <TextView
                        android:id="@+id/tvCom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:textAllCaps="true"
                        android:text="Details"
                        android:layout_marginBottom="15dp"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/textColorHead"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        fontPath="Comfortaa-Regular.ttf"
                        android:textAlignment="center"
                        tools:ignore="MissingPrefix"  />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/textColorHead"
                    android:layout_height="2dp"/>





                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/ivic"
                        android:layout_width="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_group_24"
                        android:layout_height="25dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booked Seats"
                        android:layout_toRightOf="@+id/ivic"
                        android:layout_gravity="center_vertical"
                        android:focusable="true"
                        android:layout_marginTop="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="15dp"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/textColorHead"
                        android:textSize="18sp"
                        fontPath="Comfortaa-Regular.ttf"
                        tools:ignore="MissingPrefix"  />


                    <TextView
                        android:id="@+id/tvCo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:focusable="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="15dp"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/textColorHead"
                        android:textSize="18sp"
                        fontPath="Comfortaa-Regular.ttf"
                        tools:ignore="MissingPrefix"  />


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/rvCoPas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="25dp"
                        android:layout_marginTop="2dp"
                        android:tint="@color/colorPrimaryDark"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_group_24"
                        android:layout_height="25dp"/>


                    <TextView
                        android:id="@+id/tvCoPas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Co - Passengers"
                        android:layout_gravity="center_vertical"
                        android:focusable="true"
                        android:layout_toRightOf="@+id/iv1"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="15dp"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/textColorHead"
                        android:textSize="18sp"
                        fontPath="Comfortaa-Regular.ttf"
                        tools:ignore="MissingPrefix"  />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="2dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/colorPrimaryDark"
                        android:foregroundGravity="right"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:layout_height="25dp"/>

                </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/textColorHead"
                    android:layout_height="2dp"/>

                <RelativeLayout
                    android:id="@+id/rvPendReq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/ivP"
                        android:layout_width="25dp"
                        android:layout_marginTop="2dp"
                        android:tint="@color/colorPrimaryDark"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
