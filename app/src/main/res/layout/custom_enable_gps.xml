<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:text="Why ShareSawaari needs to access Location ?"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:visibility="visible"
        fontPath="Comfortaa-Bold.ttf"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorHeadingColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/tvTitleTool"
        android:text="When the drivers starts there trip need to access there location to track the valid path and to search rides nearby you.
In order to use services, please allow us to access the location."
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:visibility="visible"
        fontPath="Comfortaa-Bold.ttf"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorHeadingColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieSelectImage"
        android:layout_width="140dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="car.json"
        android:layout_gravity="center"
        app:lottie_loop="true"
        android:layout_height="140dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cvEnable"
            android:layout_width="match_parent"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:text="Enable"
                    android:textColor="@color/md_white_1000"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    fontPath="Comfortaa-Bold.ttf"
                    android:textSize="18dp"
                    android:layout_height="match_parent"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/cvCancel"
            android:layout_width="match_parent"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@color/md_red_800"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:text="Cancel"
                    android:textColor="@color/md_white_1000"
                    android:gravity="center"
                    android:singleLine="true"

                    android:textStyle="bold"
                    tools:ignore="MissingPrefix"
                    fontPath="Comfortaa-Bold.ttf"
                    android:textSize="18dp"
                    android:layout_height="match_parent"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>